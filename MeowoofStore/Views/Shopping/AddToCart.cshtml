@model MeowoofStore.ViewModels.AddToCartViewModel

@{
    ViewData["Title"] = "AddToCart";
}

<h1>加入購物車頁面</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value="@Model.id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" type="hidden" />@*驗證錯誤返回顯示用*@
                @Html.DisplayFor(n=>n.Name)
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" type="hidden" />
                @Html.DisplayFor(n=>n.price)
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control numberOnly" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                @Html.AntiForgeryToken()
                <input type="submit" value="確認" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<hr />
<div>
    <a asp-action="List">返回商品列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(".numberOnly").on("keypress keyup blur", function (event) {
            $(this).val($(this).val().replace(/[^\d].+/, ""));
            if ((event.which < 48 || event.which > 57)) {
                event.preventDefault();
            }
        });
    </script>
}
