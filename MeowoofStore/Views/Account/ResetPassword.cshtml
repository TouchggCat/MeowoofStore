@model MeowoofStore.ViewModels.ResetPasswordViewModel
@{
    var token = ViewBag.Token as string;
    ViewData["Title"] = "MeoWoof-重設密碼頁";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input hidden="hidden" value="@token" name="token"/>
            <br />
            <div class="form-group">
                @Html.AntiForgeryToken()
                <input type="submit" value="重設密碼" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>