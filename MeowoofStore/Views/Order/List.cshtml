@model IEnumerable<MeowoofStore.Models.Order>

@{
    ViewData["Title"] = "MeowoofStore-訂單管理";
}

<h1>訂單管理</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiverName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsShopping)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Address)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsShopping)
                </td>
            <td>
                    <a asp-action="AdminOrderDetail" asp-route-OrderNumber="@item.OrderNumber">訂單明細</a> |
                    <a asp-action="AdminDeleteOrder" asp-route-OrderNumber="@item.OrderNumber">刪除訂單</a>
            </td>
        </tr>
}
    </tbody>
</table>
