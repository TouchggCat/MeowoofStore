@using System.Security.Claims;


<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark">@User.FindFirst(ClaimTypes.Name)?.Value</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="LogOut" asp-controller="Account">登出</a>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Register" asp-controller="Account">註冊</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="Account">登入</a>
        </li>
    }
</ul>
